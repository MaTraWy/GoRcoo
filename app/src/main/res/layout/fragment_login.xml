<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="center_horizontal"
        android:src ="@drawable/logo"
        android:id="@+id/BigLogo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_margin="5dp"
        android:hint=" User Name"
        android:background="@drawable/cell_shape"
        android:textColorHint="@color/cyan"
        android:textColor="@color/cyan"
        android:textCursorDrawable="@color/cyan"
        android:backgroundTint="@color/cyan"
        android:id="@+id/Login_Username"
        android:textSize="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@drawable/cell_shape"
        android:layout_margin="5dp"
        android:textColorHint="@color/cyan"
        android:textCursorDrawable="@color/cyan"
        android:hint=" Password"
        android:inputType="textPassword"
        android:textSize="15dp"
        android:textColor="@color/cyan"
        android:backgroundTint="@color/cyan"
        android:id="@+id/Login_Password"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="0.25"
        android:text="LOGIN"
        android:textStyle="bold"
        android:textColorHighlight="@color/cyan"
        android:id="@+id/Login_Button"
        android:background="@color/cyan"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:layout_gravity="right">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="@color/cyan"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:theme="@style/WhiteCheck"
        android:layout_marginRight="15dp"
        android:id="@+id/Login_rember"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textSize="10dp"
        android:layout_gravity="center"
        android:layout_marginRight="15dp"
        android:background="@color/cyan"
        android:text="Change URL"
        android:id="@+id/Login_Changeurl" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/test"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom|right"
            android:scaleType="fitEnd"
            android:src="@drawable/powered"/>

        </LinearLayout>

</LinearLayout>