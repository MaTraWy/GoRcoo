<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/history_table"

    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:text="Server       "
        android:textColor="@color/text"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/Option_Server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/total_field"
        android:hint="Server"
        android:textSize="20dp" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:text="Port           "
        android:textColor="@color/text"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/Option_Port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/total_field"
        android:hint="Port"
        android:textSize="20dp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:text="UserName"
        android:textColor="@color/text"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/Option_Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/total_field"
        android:hint="User Name"
        android:textSize="20dp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:text="Password "
        android:textColor="@color/text"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/Option_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/total_field"
        android:hint="Password"
        android:textSize="20dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Version     "
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Option_Version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/total_field"
            android:hint="Version"
            android:textSize="20dp" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Server Status     "
            android:textColor="@color/text"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/Option_ServerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/WhiteCheck"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Save Change"
    android:id="@+id/option_savechange"
    android:layout_margin="15dp"
    android:textSize="15dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Logout"
            android:id="@+id/option_logout"
            android:layout_margin="15dp"
            android:textSize="15dp"/>
    </LinearLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:layout_margin="15dp"
    android:background="@color/text"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        >
    <Button
        android:layout_width="wrap_content"
        android:text="Retreive Data"
        android:textSize="15dp"
        android:id="@+id/Option_retrieve"
        android:layout_height="wrap_content" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="15dp"
    android:id="@+id/Option_Update"
    android:text="Show Queries" />
    </LinearLayout>

</LinearLayout></ScrollView>