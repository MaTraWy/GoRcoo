<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="No:          "
            android:textColor="@color/table_header"
            android:textSize="@dimen/font_size_header" />

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:id="@+id/row_num_cust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/table"
            android:textSize="@dimen/font_size_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Customer:"
            android:textColor="@color/table_header"
            android:textSize="@dimen/font_size_header" />

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:id="@+id/row_customer_cust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/table"
            android:textSize="@dimen/font_size_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Item:        "
            android:textColor="@color/table_header"
            android:textSize="@dimen/font_size_header" />

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:id="@+id/row_item_cust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/table"
            android:textSize="@dimen/font_size_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Price:       "
            android:textColor="@color/table_header"
            android:textSize="@dimen/font_size_header" />

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:id="@+id/row_price_cust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/table"
            android:textSize="@dimen/font_size_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="User:        "
            android:textColor="@color/table_header"
            android:textSize="@dimen/font_size_header" />

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:id="@+id/row_user_cust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/table"
            android:textSize="@dimen/font_size_data" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Date:        "
            android:textColor="@color/table_header"
            android:textSize="@dimen/font_size_header" />

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:id="@+id/row_date_cust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/table"
            android:textSize="@dimen/font_size_data" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="1dp"
        android:background="@color/row" />
</LinearLayout>