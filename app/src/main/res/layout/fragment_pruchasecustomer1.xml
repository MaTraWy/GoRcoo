<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="97dp"
        android:id="@+id/Cust_image"
        android:layout_gravity="center"
        android:src="@drawable/payprint"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purchase"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/text"
                android:textSize="15dp"
                android:layout_marginRight="17dp"/>

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/Cust_add"
                android:inputType="none"
                android:background="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"

            android:orientation="horizontal">
            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/text"
                android:textSize="15sp"
                android:layout_marginRight="45dp"/>

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/Cust_name"
                android:background="#666666"
                android:inputType="none"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PhoneNumber"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="15dp"
                android:layout_marginRight="15dp"/>
            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:id="@+id/Cust_phone"
                android:background="#666666"
                android:inputType="none"
                android:layout_marginRight="8dp"
                android:text=""/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/call"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="item price"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="15dp"
                android:layout_marginRight="15dp"/>
            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="50dp"
                android:inputType="none"
                android:textSize="15dp"
                android:id="@+id/Cust_const"
                android:layout_height="wrap_content"
                android:background="#666666"
                android:text=""/>
            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#666666"
                android:textSize="15dp"
                android:layout_marginRight="25dp"
                android:text="LE"/>
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                android:inputType="number"
                android:id="@+id/Cust_var"
                android:textSize="15dp"
                android:background="#666666"
                android:text=""/>
            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#666666"
                android:textSize="15dp"
                android:text="LE"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item"
                android:layout_gravity="center"
                android:textColor="@color/text"
                android:textSize="15sp"
                android:layout_marginRight="50dp"/>

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/Cust_item"
                android:inputType="none"
                android:background="#666666"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="97dp"
        android:id="@+id/Cust_img"
        android:layout_gravity="center"
        android:src="@drawable/payprint"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>