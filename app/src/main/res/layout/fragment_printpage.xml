<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/printpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/text"
            android:textSize="14dp"
            android:layout_marginRight="17dp"/>
        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666666"
            android:textColor="@color/edit"
            android:textSize="15dp"
            android:id="@+id/print_address"
            android:text="None"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"

        android:orientation="horizontal">
        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/text"
            android:textSize="14dp"
            android:layout_marginRight="45dp"/>

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/print_name"
            android:textColor="@color/edit"
            android:textSize="15dp"
            android:background="#666666"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Phone Number"
            android:gravity="center"
            android:textColor="@color/text"
            android:textSize="14dp"
            android:layout_marginRight="15dp"/>
        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="150dp"
            android:id="@+id/print_num"
            android:layout_height="wrap_content"
            android:background="#666666"
            android:textColor="@color/edit"
            android:textSize="15dp"
            android:layout_marginRight="8dp"
            android:text=""/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/call"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Price"
            android:gravity="center"
            android:textColor="@color/text"
            android:textSize="14dp"
            android:layout_marginRight="15dp"/>

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="#666666"
            android:textColor="@color/edit"
            android:textSize="15sp"
            android:id="@+id/print_p1"
            android:layout_marginRight="25dp"/>

        <EditText
            android:layout_width="100dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:background="#666666"
            android:textColor="@color/edit"
            android:textSize="15sp"
            android:id="@+id/print_p2"
            android:layout_marginRight="8dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed"
            android:textColor="@color/text"
            android:textSize="14dp"
            android:layout_marginRight="40dp"
            android:id="@+id/textView3" />

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#666666"
            android:textColor="@color/edit"
            android:textSize="15sp"
            android:id="@+id/print_speed"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problem "
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/text"
            android:textSize="14dp"
            android:layout_marginRight="23dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#666666"
            android:theme="@style/OptionCheck"
            android:id="@+id/print_check1"/>

       <EditText
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="#666666"
            android:hint=" If there?"
            android:textColor="@color/edit"
            android:textSize="15sp"
            android:id="@+id/print_problem" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder"
            android:textColor="@color/text"
            android:textSize="14dp"
            android:layout_marginRight="14dp"
            android:id="@+id/textView4" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/OptionCheck"
            android:background="#666666"
            android:id="@+id/print_check2"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="#666666"
            android:hint=" If there?"
            android:id="@+id/print_remainder"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/text"
            android:textSize="14dp"
            android:layout_marginRight="15dp"/>
        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#666666"
            android:textSize="18dp"
            android:id="@+id/print_date"
            android:layout_marginRight="5dp"/>
        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="@color/text"
            android:textSize="14dp"
            android:layout_marginRight="15dp"/>
        <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/print_time"
            android:textSize="18dp"
            android:background="#666666"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/print_print"
        android:src="@drawable/payprint"/>
</LinearLayout>