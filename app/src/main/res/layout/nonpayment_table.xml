<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="No:         "
                android:textColor="@color/table_header"
                android:textSize="@dimen/font_size_header" />

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:id="@+id/row_num_nonpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/table"
                android:textSize="@dimen/font_size_data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Code:      "
                android:textColor="@color/table_header"
                android:textSize="@dimen/font_size_header" />

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:id="@+id/row_code_nonpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/table"
                android:textSize="@dimen/font_size_data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Name:     "
                android:textColor="@color/table_header"
                android:textSize="@dimen/font_size_header" />

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:id="@+id/row_name_nonpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/table"
                android:textSize="@dimen/font_size_data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Address: "
                android:textColor="@color/table_header"
                android:textSize="@dimen/font_size_header" />

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:id="@+id/row_address_nonpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/table"
                android:textSize="@dimen/font_size_data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Payment:"
                android:textColor="@color/table_header"
                android:textSize="@dimen/font_size_header" />

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:id="@+id/row_price_nonpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/table"
                android:textSize="@dimen/font_size_data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Remain:  "
                android:textColor="@color/table_header"
                android:textSize="@dimen/font_size_header" />

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:id="@+id/row_payment_nonpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/table"
                android:textSize="@dimen/font_size_data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Header
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Date:       "
                android:textColor="@color/table_header"
                android:textSize="@dimen/font_size_header" />

            <com.matrawy.a7oda.gorcoo.Fonts.Custom_Font_Data
                android:id="@+id/row_date_nonpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/table"
                android:textSize="@dimen/font_size_data" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="1dp"
            android:background="@color/row" />

    </LinearLayout>
</LinearLayout>